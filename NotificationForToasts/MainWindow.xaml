<Window x:Class="NotificationForToasts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotificationForToasts"
        mc:Ignorable="d"
        Title="实时财经消息推送" Height="407" Width="279" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="0,0,0,9">
        <Button Content="即时消息" HorizontalAlignment="Left" Margin="360,20,-394,0" VerticalAlignment="Top" Width="250" Height="80" Click="Button_Click" Grid.Column="1"/>
        <ListView Name="listView1" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="270" Margin="0,0,0,-8" Grid.ColumnSpan="1" PreviewMouseDoubleClick="ListView1_PreviewMouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id"  DisplayMemberBinding="{Binding Path=id}"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Path=createTime}" />
                    <GridViewColumn Header="title"  DisplayMemberBinding="{Binding Path=indexTitle}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
